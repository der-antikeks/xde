<?php
    $translate = Zend_Registry::get('Zend_Translate');
?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Zend Framework Default Application</title>
    </head>
    <body>
        <h1><?php echo $translate->_('An error occurred'); ?></h1>
        <h2><?php echo $translate->_($this->message); ?></h2>

        <?php if (isset($this->exception)): ?>
            <h3><?php echo $translate->_('Exception information'); ?>:</h3>
            <p>
                <b><?php echo $translate->_('Message'); ?>:</b> <?php echo $translate->_($this->exception->getMessage()); ?>
            </p>

            <h3><?php echo $translate->_('Stack trace'); ?>:</h3>
            <pre><?php echo $this->exception->getTraceAsString() ?></pre>

            <h3><?php echo $translate->_('Request Parameters'); ?>:</h3>
            <pre><?php echo var_export($this->request->getParams(), true) ?></pre>
        <?php endif ?>

    </body>
</html>
